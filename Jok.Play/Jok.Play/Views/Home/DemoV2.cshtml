<body>
    <div id="Jok" class="JokMain">

        <!-- [Corner Objects] -->
        <div id="Background"></div>
        <div id="Background2"></div>
        <div id="ExitButton">
            <div class="circle">
                <i class="fa fa-angle-left"></i>
            </div>
            Exit
        </div>
        <div id="ChatButton">
            Chat
            <div class="circle">
                <i class="fa fa-comment-o"></i>
            </div>
        </div>
        <div id="ConfigButton" data-toggle="modal" data-target="#SettingsModal">
            Game Settings
            <div class="circle">
                <i class="fa fa-umbrella"></i>
            </div>
        </div>
        <div id="PlayerButton">
            <div class="circle player_circle">
                <i class="glyphicon glyphicon-music main_icon"></i>
            </div>
            <span class="title">
                Music Player
            </span>
            <div id="MusicPlayer" class="jokfm_plugin">
                <div>
                    <span class="item previous_button"><i class="fa fa-backward"></i></span>
                    <span class="item play_button"><i class="fa fa-play"></i></span>
                    <span class="item stop_button"><i class="fa fa-stop"></i></span>
                    <span class="item next_button"><i class="fa fa-forward"></i></span>
                </div>
                <div class="active_channel">Online Music</div>
            </div>
        </div>



        <div id="Authorization">
            <img src="http://jok.io/content/images/portal/joklogo2.png" />
            <br />
            <br />
            <ul class="social_connect">
                <li class="click_navigate">
                    <a href="http://jok.io/portal/joinus/facebook?returnUrl=@Request.Url">
                        <img src="http://jok.io/content/images/social/fb.png" />
                        Login using Facebook
                    </a>
                </li>
                <li class="click_navigate">
                    <a href="http://jok.io/portal/joinus/twitter?returnUrl=@Request.Url">
                        <img src="http://jok.io/content/images/social/twitter.png" />
                        Login using Twitter
                    </a>
                </li>
                <li class="click_navigate">
                    <a href="http://jok.io/portal/joinus/odnoklasniki?returnUrl=@Request.Url">
                        <img src="http://jok.io/content/images/social/odno.png" />
                        Login using Однокласники
                    </a>
                </li>
                <li class="click_navigate">
                    <a href="http://jok.io/portal/joinus/vkontaqte?returnUrl=@Request.Url">
                        <img src="http://jok.io/content/images/social/vk.png" />
                        Login using Вконтакте
                    </a>
                </li>
                <li class="click_navigate">
                    <a href="http://jok.io/portal/joinus/google?returnUrl=@Request.Url">
                        <img src="http://jok.io/content/images/social/google.png" />
                        Login using Google
                    </a>
                </li>
            </ul>
        </div>


        <div id="Notifications">
            <div class="item">Holla</div>

        </div>



        <div id="SettingsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="SettingsModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h3 class="modal-title" id="SettingsModal"><i class="fa fa-umbrella"></i> Game Settings</h3>
                    </div>
                    <div class="modal-body">
                        <button class="btn btn-default btn-block btn-lg disable_audio_effects"><i class="glyphicon glyphicon-volume-up" style="float:left;"></i> Disable Audio Effects</button>
                        <button class="btn btn-default btn-block btn-lg enable_audio_effects"><i class="glyphicon glyphicon-volume-off" style="float:left;"></i> Enable Audio Effects</button>
                        <button class="btn btn-default btn-block btn-lg clear_chat"><i class="fa fa-comment-o" style="float:left;"></i> Clear Chat</button>
                    </div>
                </div>
            </div>
        </div>


        <div id="RightPanel">
            <div class="chat_messages">
                <div class="bubles_container">
                    <div class="buble colorJ">
                        <span class="nick">Jok:</span>
                        <div>
                            Hello, How are you?
                        </div>
                    </div>
                    <div class="buble color3">
                        <span class="nick">Ezeki</span>
                        <div>
                            Let's play !
                        </div>
                    </div>
                    <div class="buble colorJ">
                        <span class="nick">Jok:</span>
                        <div>
                            Hello, How are you?
                        </div>
                    </div>
                </div>
            </div>
            <div class="chat_input">
                @if (String.IsNullOrEmpty(ViewBag.Channel))
                {
                <input id="ChatMessageInput" type="text" placeholder="Press Enter & Send Message" maxlength="100" />
                }
                else
                {
                <input id="ChatMessageInput" type="text" placeholder="Chat is pribate" maxlength="100" />
                }
            </div>
        </div>


        <div id="SmilesBoxModal" class="modal  " tabindex="-1" role="dialog" aria-labelledby="SettingsModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h3 class="modal-title" id="SettingsModal"><i class="fa fa-smile-o"></i> Send Emotions</h3>
                    </div>
                    <div class="modal-body">
                        <div class="smiles_container">
                        </div>
                        <div class="headline vip">
                            <span>VIP Emotions</span>
                        </div>
                        <div class="vip_smiles_container @(ViewBag.IsVIPMember == true ? "" : "disabled")">
                        </div>

                    </div>
                </div>
            </div>
        </div>


