    </div>

    <style>
        #Jok.panel_open ~ #Game{
            margin-right: 300px;
        }
        #Game {
            position: relative;
            z-index: 100;
            transition: 200ms;
        }

        #Player1 {
            position: absolute;
            top: 100px;
            left: 30%;
        }

        #Player2 {
            position: absolute;
            top: 100px;
            right: 30%;
        }
    </style>
    <div id="Game">
        <div id="Player1" class="jok_player">
            <img src="http://play.jok.io/images/speakers2.png" class="music_speakers">
            <img class="avatar" src="https://jok.io/portal/avatar/~base_skin_01b~Clothes_14~Eyes_01~Mouth_02~Eyebrows_07~~Hair_03~Accessories_03~8587994621026700984" />
            <div class="nick"><span>PlayerX</span></div>
            <div class="offline_title">Offline</div>
            <div class="wins"></div>
            <div class="added_points"></div>
            <div class="score"></div>
            <div class="progressbar"></div>
            <div class="chat_bubble">
                <div class="inner">HollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHollaHolla</div>
            </div>
            <div class="ready"></div>
            <div class="music_player"></div>
            <div class="rate"></div>
            <div class="playing_music_channel">HITS</div>
        </div>
        <div id="Player2" class="jok_player invert offline">
            <img class="avatar" src="https://jok.io/portal/avatar/~base_skin_01b~Clothes_14~Eyes_01~Mouth_02~Eyebrows_07~~Hair_03~Accessories_03~8587994621026700984" />
